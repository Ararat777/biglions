<div class="row">
  <div class="col-lg-4">
    <div class="row">
      <div class="col-lg-6">
        <div class="service-image">
          <%= image_tag page.indents.first.image_url,class: 'img-fluid' %>
        </div>
      </div>
    </div>
    <h2 class="title">
      <%= page.name %>
    </h2>
    <p class="description">
      <%= page.indents.first.body %>
    </p>
    <%= link_to 'Показать больше',services_category_path(page.title), class: 'show-more button' %>
    <div class="sales">
      <span>%</span> Мооооощные скидки
    </div>
  </div>
  <div class="col-lg-4 offset-lg-3">
   <div class="category-box">
     <div class="sub-categories">
      <% @category.categories.find_by(:title => page.title).categories.each do |item| %>
        <%= link_to item.name,services_sub_category_path(page.title,item.title) %>
      <% end %>
    </div>
   </div>
  </div>
</div>
<h2 class="title text-center">
  <%= page.name %>
</h2>
<div class="row">
  <div class="col-xl-3 offset-xl-2 col-md-4 offset-md-1">
    <div class="tariff-box text-center">
      <h4>
        <%= category.tariffs.first.title %>
      </h4>
      <%= image_tag category.tariffs.first.image_url, class: 'img-fluid' %>
      <p>
        <%= raw(category.tariffs.first.body) %>
      </p>
      <div class="price-box">
        $<%= category.tariffs.first.price %>
      </div>
    </div>
  </div>
  <div class="col-xl-5 col-md-6">
    <div class="tariff-box text-center gold">
      <h4>
        <%= category.tariffs.last.title %>
      </h4>
      <%= image_tag category.tariffs.last.image_url, class: 'img-fluid' %>
      <p>
        <%= raw(category.tariffs.last.body) %>
      </p>
      <div class="price-box gold">
        $<%= category.tariffs.last.price %>
      </div>
    </div>
  </div>
</div>
<h2 class="title">
  <%= page.name %>
</h2>
<div class="row">
  <% page.indents.limit(6).each do |item| %>
  <div class="col-md-4 indent-box">
    <div class="justify-box horizontal">
      <%= image_tag '/assets/point-icon.svg', class: 'point img-fluid' %>
      <h4 class="indent-title">
        <%= item.title %>
      </h4>
    </div>
  </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-4 indent-box">
    <h4 class="indent-title">
      <%= page.indents.last.title %>
    </h4>
  </div>
  <div class="col-md-3 indent-box hidden-sm-down">
    <div class="button slide-next">
      Да! Листать дальше
    </div>
  </div>
</div>
<h2 class="title">
  <%= raw(page.name) %>
</h2>
<div class="row">
  <% page.indents.each_with_index do |item,number| %>
  <div class="col-md-3">
    <div class="justify-box horizontal">
      <span class="number"><%= number + 1 %></span>
      <div class="indent-box">
        <h4 class="indent-title">
          <%= item.title %>
        </h4>
        <p class="description">
          <%= item.body %>
        </p>
      </div>
      
    </div>
  </div>
  <%end %>
</div>
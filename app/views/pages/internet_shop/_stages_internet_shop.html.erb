<h2 class="title">
  <%= raw(page.name) %>
</h2>
<div class="row">
  <div class="col-md-12">
    <% if mobile_device? %>
    <% page.indents.each_with_index do |item,number| %>
    <div class="col-12 col-sm-12 indent-box">
      <div class="justify-box horizontal">
        <h4 class="number">
          <%= number + 1 %>
        </h4>
        <div>
          <h4 class="indent-title">
            <%= item.title %>
          </h4>
          <p class="description">
          <%= item.body %>
          </p>
        </div>
        
      </div>
    </div>
    <% end %>
    <% else %>
    <div class="overflow-indents-box">
      <div class="indents-wrapper">
        <div class="indents-box">
          <div class="row">
            <% page.indents.limit(3).each_with_index do |item,number| %>
            <div class="col-md-3 indent-box">
              <div class="justify-box horizontal">
                <span class="number"><%= number + 1 %></span>
                <div>
                  <h4 class="indent-title">
                    <%= item.title %>
                  </h4>
                  <p class="description">
                    <%= item.body %>
                  </p>
                </div>

              </div>
            </div>
            <%end %>
            <div class="col-md-3">
              <div class="justify-box text-center">
                <div class="button more-less-button" data-direct="more">
                  Ещё <i class="fa fa-arrow-right" aria-hidden="true"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="indents-box">
          <div class="row">
          <div class="col-md-3">
              <div class="justify-box text-center">
                <div class="button more-less-button" data-direct="less">
                  <i class="fa fa-arrow-left" aria-hidden="true"></i> Ещё 
                </div>
              </div>
            </div>
          <% page.indents.offset(3).each_with_index do |item,number| %>
            <div class="col-md-3 indent-box">
              <div class="justify-box horizontal">
                <span class="number"><%= number + 4 %></span>
                <div>
                  <h4 class="indent-title">
                    <%= item.title %>
                  </h4>
                  <p class="description">
                    <%= item.body %>
                  </p>
                </div>

              </div>
            </div>
            <%end %>
          </div>
        </div>
      </div>
   </div>
    <% end %>
  </div>
</div>
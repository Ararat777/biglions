<h2 class="title">
  <%= page.name %>
</h2>
<div class="row">
  <% page.indents.each_with_index do |item,number| %>
  <div class="col-lg-4">
    <div class="row">
      <div class="col-lg-3">
        <h2 class="number"><%= number + 1 %></h2>
      </div>
      <div class="col-lg-9">
        <p class="description">
          <%= item.body %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
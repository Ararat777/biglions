<div class="row">
  <div class="col-md-8">
   <div class="justify-box">
     <h2 class="title">
      <%= page.name %>
    </h2>
    <div class="row">
      <div class="col-md-7">
      <div class="description">
        <%= raw(page.indents.first.body) %>
      </div>
    </div>
    </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="auditing form-box">
    <p class="description">
      Закажи самый адаптивный сайт в животном мире, и получи скидку 10%
    </p>
     <%= form_for :projects,url: projects_path do |f| %>
      <%= f.hidden_field :form_place, :value => "#{page.category.name}/#{page.name}" %>
          <div class="input-group">
            <%= f.text_field :name, class: 'form-control',placeholder: 'Как Вас зовут?' %>
          </div>
          <div class="input-group">
            <%= f.text_field :phone, class: 'form-control',placeholder: 'Ваш номер телефона' %>
          </div>
          <div class="input-group">
            <%= f.text_field :email, class: 'form-control',placeholder: 'Электронная почта' %>
          </div>
          <div class="input-group">
            <%= f.button 'Обсудить проект', class: 'button', :onclick => "ga('send', 'event', '#{page.category.title}_#{page.title}_page', 'send_discuss_project_11')" %>
          </div>
          <% end %>
   </div>
   <div class="sales">
      <span>%</span> Cкидка 20%
    </div>
  </div>
</div>
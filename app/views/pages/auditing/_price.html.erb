<h2 class="title text-center">
  <%= page.name %>
</h2>
<div class="row">
  <div class="col-md-6 offset-md-3">
   <p class="description text-center">
     <%= page.indents.first.body %>
   </p>
  </div>
</div>
<div class="row">
  <div class="col-md-10 offset-md-1">
   <div class="row">
    <% column_width = 9 %>
    <% category.tariffs.each_with_index do |item,number| %>
    <div class="col-md-<%= column_width + number %> col-<%= column_width + number %> col-sm-<%= column_width + number %> tariff-column">
      <div class="auditing-tariff-box">
        <span><%= item.title %> - $<%=item.price%> </span>
        <%= link_to "Подробно", tariff_path(item),remote: true,class: 'button', :onclick => "ga('send', 'event', '#{page.category.title}_#{page.title}_page_#{number + 1}', 'detail_#{number + 1}')" %>
      </div>
    </div>
   
    <% end %>
   </div>
  </div>
</div>
<div class="tariff-modal-window">
  
</div>
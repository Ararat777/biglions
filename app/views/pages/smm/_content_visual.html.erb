<h2 class="title">
  <%= page.name %>
</h2>
<div class="row">
  <% page.indents.each do |item| %>
  <div class="col-md-4 indent-box">
   <h4 class="indent-title">
     <%= item.title %>
   </h4>
   <% if item.body? %>
    <p class="description">
      <%= item.body %>
    </p>
  
   <% elsif item.image_url? %>
   <%= image_tag item.image_url, class: 'img-fluid' %>
   <% end %>
   </div>
  <% end %>
</div>
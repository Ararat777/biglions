



<div class="row">
  <div class="col-md-9">
    <div class="justify-box">
      <h2 class="title">
        <%= page.name %>
       </h2>
       <h2 class="title price">
         от $350
       </h2>
       <div class="row">
         <div class="col-md-5">
           <p class="description">
            <%= page.indents.first.body %>
           </p>
         </div>
       </div>
    </div>
  </div>
  <div class="col-md-3">
   <div class="price form-box">
     <p class="description text-center">
       Заполни форму и получи мощную скидку!
     </p>
     <%= form_for :project,url: '#' do |f| %>
          <div class="input-group">
            <%= f.text_field :name, class: 'form-control',placeholder: 'Как Вас зовут?' %>
          </div>
          <div class="input-group">
            <%= f.text_field :phone, class: 'form-control',placeholder: 'Ваш номер телефона' %>
          </div>
          <div class="input-group">
            <%= f.text_field :email, class: 'form-control',placeholder: 'Электронная почта' %>
          </div>
          <div class="input-group">
            <%= f.button 'Обсудить проект', class: 'button' %>
          </div>
          <% end %>
   </div>
    
  </div>
</div>
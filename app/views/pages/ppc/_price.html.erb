<div class="row">
  <div class="col-lg-8">
    <h2 class="title">
      <%= page.name %>
    </h2>
    <p class="description">
      <%= page.indents.first.body %>
    </p>
  </div>
  <div class="col-lg-3 offset-lg-1">
    <div class="price-button modal-btn button">
      Заказать консультацию
    </div>
  </div>
</div>
<div class="row">
  <% page.indents.offset(1).each do |item| %>
  <div class="col-lg-6">
    <div class="price-box">
      <h4 class="indent-title">
        <%= item.title %>
      </h4>
      <p class="description">
        <%= item.body %>
      </p>
    </div>
  </div>
  <% end %>
</div>
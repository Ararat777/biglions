<div class="modal_box">
  <div class="modal_content">
    <div class="modal-form-box">
      <div class="container">
        <div class="row">
          <div class="col-md-10 offset-md-1">
            <h2>Обсудить проект</h2>
          <%= form_for :projects,url: projects_path do |f| %>
          <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                  <%= f.text_field :name, class: 'form-control',placeholder: 'Как Вас зовут?' %>
                </div>
                <div class="input-group">
                  <%= f.text_field :phone, class: 'form-control',placeholder: 'Ваш номер телефона' %>
                </div>
                <div class="input-group">
                  <%= f.text_field :email, class: 'form-control',placeholder: 'Электронная почта' %>
                </div>
            </div>
            <div class="col-md-6 inputs-mobile">
              <div class="input-group">
               <%= f.text_area :comment, class: 'form-control',placeholder: 'Опишите кратко свой проект' %>
              </div>
            </div>
            <div class="actions">
             <div class="container">
               <div class="row">
                <div class="col-md-6 action-mobile">
              <div class="input-group file">
                <%= f.file_field :document, class: 'form-control', :onclick => "ga('send', 'event', 'discuss_project_page', 'add_tz')" %>
                <%= f.label :document do %>
                <%= image_tag '/assets/attach.svg' %>
                Прикрепить тех. задание
                <% end %>
              </div>
            </div>
            <div class="col-md-6 action-mobile">
              <div class="input-group">
                <%= f.button 'Обсудить проект', class: 'button', :onclick => "ga('send', 'event', 'discuss_project_page_1', 'send_discuss_project')" %>
              </div>
            </div>
              </div>
             </div>
              
              
            </div>
            
          </div>
          <% end %>
          <p class="agreement">Отправляя форму, вы соглашаетесь с "Правилами поведения", и положением о переписи квартиры.</p>
          <h4>BigLions © 2015-2017</h4>
          </div>
        </div>
      </div>
    </div>
    
  </div>
  <div class="close-modal-form">
    <%= image_tag '/assets/close.svg',class: 'img-fluid' %>
  </div>
  
</div>
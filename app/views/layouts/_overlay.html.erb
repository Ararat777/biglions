<% if mobile_device? %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-xs-12 top-menu-opened-item flex-column">
          <div class="top-menu-item-mobile services">
            <h4><%= link_to 'Услуги',services_path %> <i class="fa fa-caret-down caret-btn" aria-hidden="true"></i></h4>
            <div class="menu-item-box">
              <div class="menu-item mobile">
                <% Category.find_by(:title => 'services').categories.each do |item| %>
                <div class="category-link">
                  <%= link_to item.name,services_category_path(item.title) %>
                <div class="sub-categories-links-box <%= item.title %>">
                 <div class="sub-categories-links">
                  <div class="row">
                    <% item.categories.in_groups_of(2,false).each do |group| %>
                    <div class="col-md-6">
                    <% group.each do |sub_item| %>
                      <%= link_to sub_item.name,services_sub_category_path(item.title,sub_item.title) %><br>
                    <% end %>
                    </div>
                    <% end %>
                  </div>
                 </div>
                </div>
                </div>
                <% end %>
            </div>
            </div>
          </div>
          <div class="top-menu-item-mobile company">
            <h4><%= link_to 'Компания',about_path %> <i class="fa fa-caret-down caret-btn" aria-hidden="true"></i></h4>
            
              <div class="menu-item-box">
                <div class="menu-item mobile">
                <% Category.find_by(:title => 'about').pages.each do |item| %>
                <%= link_to item.name,about_path(anchor: item.title) %>
                <% end %>
              </div>
              </div>
           
          </div>
    </div>
    <div class="col-sm-12 col-xs-12 top-menu-opened-item flex-column">
          <div class="top-menu-item-mobile portfolio">
            <h4>Портфолио</h4>
            <div class="top-menu-item-hovered">
              <div class="top-battlements"></div>
              <div class="bottom-battlements"></div>
            </div>
          </div>
          <div class="top-menu-item-mobile contacts">
            <h4><%= link_to 'Контакты', contacts_path %></h4>
            <div class="top-menu-item-hovered">
              <div class="top-battlements"></div>
              <div class="menu-item">
                <p class="mobile"><a href="tel:+380943425163">(094) <b>342-51-63</b></a></p>
                <a href="#">info@biglions.org</a>
                <a href="#"><%= image_tag '/assets/icon-scype.svg',class: 'img-fluid' %> biglions</a>
                <p>Украина, г.Харьков, ул.Грековская 5 </p>
                <%= link_to 'Просмотреть все контакты',contacts_path,class: 'view-contacts' %>
              </div>
              <div class="bottom-battlements"></div>
            </div>
          </div>
        </div>
  </div>
</div>
<div class="social">
            <a href="#"><%= image_tag '/assets/instagram.svg' %></a>
            <a href="#"><%= image_tag '/assets/facebook.svg' %></a>
            <a href="#"><%= image_tag '/assets/twitter.svg' %></a>
</div>
<div class="col-xs-12 col-sm-12 top-menu-opened-discuss-project flex-column">
          <%= image_tag '/assets/logo.svg',width: '50',height: '50'%>
          <h2>Обсудить<br>проект</h2>
          <%= form_for :project,url: '#' do |f| %>
          <div class="input-group">
            <%= f.text_field :name, class: 'form-control',placeholder: 'Как Вас зовут?' %>
          </div>
          <div class="input-group">
            <%= f.text_field :phone, class: 'form-control',placeholder: 'Ваш номер телефона' %>
          </div>
          <div class="input-group">
            <%= f.text_field :email, class: 'form-control',placeholder: 'Электронная почта' %>
          </div>
          <div class="input-group">
            <%= f.text_area :comment, class: 'form-control',placeholder: 'Опишите кратко свой проект' %>
          </div>
          <div class="input-group file">
            <%= f.file_field :file, class: 'form-control' %>
            <%= f.label :file do %>
              <%= image_tag '/assets/attach.svg' %>
              Прикрепить тех. задание
            <% end %>
          </div>
          <div class="input-group">
            <%= f.submit 'Обсудить проект', class: 'button' %>
          </div>
          <% end %>
          <p class="agreement">Отправляя форму, вы соглашаетесь с "Правилами поведения", и положением о переписи квартиры.</p>
          <h4>BigLions © 2015-2017</h4>
</div>
